                <ImageBrush ImageSource="/images/cello.png"/>
            </Button.OpacityMask>
            <Button.BorderBrush>
                <ImageBrush ImageSource="/images/cello.png"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="/images/cello.png"/>
            </Button.Background>
            <Button.Foreground>
