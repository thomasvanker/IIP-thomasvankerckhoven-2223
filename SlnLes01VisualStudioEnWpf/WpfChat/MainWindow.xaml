<Window x:Class="WpfChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="650">
    <Grid Background="#FFD2F6FA" RenderTransformOrigin="0.507,0.398">
        <Label x:Name="lblNaam" Content="Naam:" HorizontalAlignment="Left" Margin="77,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.769,-0.723"/>
        <Label x:Name="lblBericht" Content="Bericht:" HorizontalAlignment="Left" Margin="77,98,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNaam" HorizontalAlignment="Left" Margin="162,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="txtBericht" HorizontalAlignment="Left" Margin="162,98,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="170" Height="70"/>
        <Button Content="VERZENDEN" HorizontalAlignment="Left" Margin="252,183,0,0" VerticalAlignment="Top" Width="80" FontSize="10" Click="Button_Click"/>
        <TextBlock x:Name="blkChat" HorizontalAlignment="Left" Margin="434,62,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="170" Width="150" Background="White"/>

    </Grid>
</Window>
