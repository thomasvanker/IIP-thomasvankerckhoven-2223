<Window x:Class="WpfVolumeSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVolumeSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="800">
    <Grid Background="#FF1C8AC8">
        <Label x:Name="lblSliderValue" Content="50"  HorizontalAlignment="Left" Margin="422,205,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Slider x:Name="sld1" HorizontalAlignment="Center" TickFrequency="5" IsSnapToTickEnabled="True" Minimum="0" Maximum="100" Value="50" Margin="0,142,0,0" VerticalAlignment="Top" Width="576" Height="18" ValueChanged="sld1_ValueChanged"/>
        <Label Content="Volume:" HorizontalAlignment="Left" Margin="336,205,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>
